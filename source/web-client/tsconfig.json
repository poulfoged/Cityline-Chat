{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "lib/*": ["./source/library/*"],
      "features/*": ["./source/features/*"]
    },
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "files": [
    "./source/index.ts"
  ],
  "compileOnSave": false,
  "exclude": [
    "obj",
    "node_modules"
  ]
}